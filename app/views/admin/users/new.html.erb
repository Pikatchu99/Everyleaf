<h1>New user</h1>
<div class="container mt-5">
<div class="text-center">
<%= form_with model: @user, url: admin_users_path do |t| %>
      <div class="row mb-5">
        <%= t.label :name, class: "col-md-4"%>
        <%= t.text_field :name, class: "col-md-4"%>
      </div>

      <div class="row mb-5">
        <%= t.label :email, class: "col-md-4"%>
        <%= t.email_field :email, class: "col-md-4"%>
      </div>

      <div class="row mb-5">
        <%= t.label :password, class: "col-md-4"%>
        <%= t.password_field :password, class: "col-md-4"%>
      </div>

      <div class="row text-center">
        <%= t.label :is_admin, class: "col-md-4"%>
        <%= t.check_box :is_admin, class: "col-md-4 fs-5", :style => "width: 30px; height: 30px;"%>
      </div>

      <div class="text-center mt-5">
        <%= t.submit "J'inscris un utilisateur", class: "btn btn-success"%>
      </div>
  <% end%>
</div>
</div>